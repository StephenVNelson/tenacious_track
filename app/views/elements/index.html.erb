<% provide(:title, 'All elements') %>
<%= flash[:notice] %>
<%= render 'shared/error_messages', object: @new_element %>

<div class="container">
  <h1 class="mb-5">Exercise Elements</h1>

  <%= form_tag elements_path, method: :get do %>
    <div class="row">
      <div class="col col-lg-4">
        <%= text_field_tag :query, params[:query], class: 'form-control', placeholder: "Search elements" %>
      </div>
      <div class="col col-lg-2">
        <%= submit_tag "Search", name: nil, class: 'btn btn-secondary' %>
      </div>
    </div>
  <% end %>

  <%= will_paginate @element %>

  <table class="table">
    <thead class="thead-dark">
      <th scope="col">Category</th>
      <th scope="col">Element</th>
      <th scope="col"></th>
      <th scope="col"></th>
    </thead>
    <tbody>
      <tr>
        <td colspan="4">
          <span class="edit-link" id="add-element">Add Element</span>
          <%= render 'form', display: "display: none", submiter: "Create Element" %>
        </td>
      </tr>
      <%= render @elements %>
    </tbody>
  </table>

  <%= will_paginate @element %>

</div>
