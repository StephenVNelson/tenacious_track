<%= form_with(model: exercise, local: true) do |form| %>
  <% if exercise.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(exercise.errors.count, "error") %> prohibited this exercise from being saved:</h2>

      <ul>
      <% exercise.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <!-- Elements -->
  <div id="dropdowns" class="my-5">
    <div id="row-1" class="row">
      <div class="col">
        <%= form.select("element_s[series_name]", Element.select(:series_name).distinct.map(&:series_name), {prompt: "Select Series"}, id: :exercise_element_series_1,class: "form-control series-filter") %>
      </div>
      <div class="col">
        <%= form.select "element_n[name]",
        grouped_options_for_select( @names_grouped_by_series, selected_key = nil, prompt: "Select Element"),{}, id: :exercise_element_name_1, class: 'form-control name-filtered' %>
      </div>
      <div class="col">
        <span class="jquery-add">+</span>
      </div>
    </div>
  </div>



  <table class="table" id="card">
    <thead class="thead-dark">
      <tr>
        <th scope="col">Reps</th>
        <th scope="col">(R+L)</th>
        <th scope="col">Resistance</th>
        <th scope="col">Duration</th>
        <th scope="col">Work/Rest</th>
      </tr>
    </thead>
    <tbody>
      <tr class="table-light">
        <td>
          <%= check_box_tag("exercise[reps_bool]", value = "true", checked = false) %>
        </td>
        <td>
          <%= check_box_tag("exercise[right_left_bool]", value = "true", checked = false) %>
        </td>
        <td>
          <%= check_box_tag("exercise[resistance_bool]", value = "true", checked = false) %>
        </td>
        <td>
          <%= check_box_tag("exercise[duration_bool]", value = "true", checked = false) %>
        </td>
        <td>
          <%= check_box_tag("exercise[work_rest_bool]", value = "true", checked = false) %>
        </td>
      </tr>
    </tbody>
  </table>
  <%= form.submit :Submit, class: "btn btn-primary" %>

<% end %>
